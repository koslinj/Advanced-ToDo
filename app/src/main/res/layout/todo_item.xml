<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/todo_item_bg"
    android:padding="12dp"
    android:gravity="center">

    <ImageButton
        android:id="@+id/completeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/check_circle_icon"
        android:background="@drawable/image_button_bg_unchecked"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/todoDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="28.04.2024"
            android:textSize="18sp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/todoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WyprowadziÄ‡ psa"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>